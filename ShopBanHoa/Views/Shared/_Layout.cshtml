            <a class="navbar-brand" style="height:35px"><h3 style="font-size: 30px">HoaGiaiDieu</h3></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item" style="height:25px;margin-top:12px">
                        <h5>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link active", style = "font-size:17px;margin-top:11px;padding-right:30px" })</h5>
                    </li>
                    <li class="nav-item" style="height:25px;margin-top:12px">
                        <h5></h5>
                    </li>
                    @if (Session["username"] != "" && Session["username"] != null && Session["userType"].ToString().CompareTo("2") == 0)
                    {
                        <li class="nav-item dropdown" style="height:25px;margin-top:12px;padding-right:10px">
                            <h5>@Html.ActionLink("Product", "Index", "Products", new { area = "" }, new { @class = "nav-link active", style = "font-size:17px;margin-top:11px;padding-right:30px" })</h5>
                        </li>
                        <li class="nav-item" style="height:25px;margin-top:12px">
                            <h5>@Html.ActionLink("Categories", "Index", "Categories", new { area = "" }, new { @class = "nav-link active", style = "font-size:17px;margin-top:11px;padding-right:30px" })</h5>
                        </li>
                    }
                    @if (Session["username"] != "" && Session["username"] != null && Session["userType"].ToString().CompareTo("3") == 0)
                    {
                        <li class="nav-item dropdown" style="height:25px;margin-top:12px">
                            <h5>@Html.ActionLink("Product", "Index", "Products", new { area = "" }, new { @class = "nav-link active", style = "font-size:17px;margin-top:11px;padding-right:30px" })</h5>
                        </li>
                    }
                    @if (Session["username"] != "" && Session["username"] != null && Session["userType"].ToString().CompareTo("1") == 0)
                    {
                        <li class="nav-item" style="height:25px;margin-top:12px">
                            <h5>@Html.ActionLink("User", "Index", "Users", new { area = "" }, new { @class = "nav-link active", style = "font-size:17px;margin-top:11px;padding-right:30px" })</h5>
                        </li>
                        <li class="nav-item" style="height:25px;margin-top:12px">
                            <h5>@Html.ActionLink("User Type", "Index", "UserTypes", new { area = "" }, new { @class = "nav-link active", style = "font-size:17px;margin-top:11px;padding-right:30px" })</h5>
                        </li>
                        <li class="nav-item dropdown" style="height:25px;margin-top:12px;padding-right:10px">
                            <h5>@Html.ActionLink("Product", "Index", "Products", new { area = "" }, new { @class = "nav-link active", style = "font-size:17px;margin-top:11px;padding-right:30px" })</h5>
                        </li>
                        <li class="nav-item" style="height:25px;margin-top:12px">
                            <h5>@Html.ActionLink("Categories", "Index", "Categories", new { area = "" }, new { @class = "nav-link active", style = "font-size:17px;margin-top:11px;padding-right:30px" })</h5>
                        </li>
                    }
                    @if (Session["username"] == "" || Session["username"] == null)
                    {
                        <li class="nav-item dropdown" style="height:25px;margin-top:12px">
                            <h5>@Html.ActionLink("Product", "Index", "Products", new { area = "" }, new { @class = "nav-link active", style = "font-size:17px;margin-top:11px;padding-right:30px" })</h5>
                        </li>
                    }

                    <li class="nav-item dropdown">
                        <h5 class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="margin-top:22px;color:white;font-size:17px;">Pages</h5>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="margin-top:3px;transform:scale(1.2)">
                            <li><a style="">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "dropdown-item" })</a></li>
                            <li><a class="dropdown-item" href="#">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "dropdown-item" })</a></li>
                            @*<li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#">Something else here</a></li>*@
                        </ul>
                    </li>

                </ul>

                @if (Session["username"] != "" && Session["username"] != null && Session["userType"].ToString().CompareTo("1") == 0)
                {
                    using (Html.BeginForm("SearchFunctionUser", "Users", FormMethod.Get, new { style = "height:40px" }))
                    {
                        <div>
                            <div style="display:flex">
                                <div>
                                    <b style="color:white"> Search Option: </b>
                                </div>
                                <div style="padding-left:10px">
                                    @Html.RadioButton("optionU", "Name", new { style = "margin-top:0px" }) <b style="color:white">Username</b>
                                </div>
                                <div style="padding-left:10px">
                                    @Html.RadioButton("optionU", "UserTypeID", new { style = "margin-top:0px;" }) <b style="color:white;margin-bottom:0px">User Type</b>
                                </div>
                            </div>
                            <div>
                                @Html.TextBox("searchU", " ", new { @class = "sss", style = "border-radius: 10px; width:250px;margin-right:50px;padding-left:10px" })
                                <input type="submit" name="submit" placeholder="Search" style="display:none" />
                            </div>
                        </div>
                    }
                }
                @if (Session["username"] != "" && Session["username"] != null && Session["userType"].ToString().CompareTo("2") == 0)
                {
                    using (Html.BeginForm("SearchFunction", "Products", FormMethod.Get, new { style = "height:40px" }))
                    {
                        <div>
                            <div style="display:flex">
                                <div>
                                    <b style="color:white"> Search Option: </b>
                                </div>
                                <div style="padding-left:10px">
                                    @Html.RadioButton("option", "PName", new { style = "margin-top:0px" }) <b style="color:white">Name</b>
                                </div>
                                <div style="padding-left:20px">
                                    @Html.RadioButton("option", "CategoryId", new { style = "margin-top:0px;" }) <b style="color:white;margin-bottom:0px">Plant Type</b>
                                </div>
                            </div>
                            <div>
                                @Html.TextBox("search", " ", new { @class = "sss", style = "border-radius: 10px; width:300px;margin-right:50px;padding-left:10px" })
                                <input type="submit" name="submit" placeholder="Search" style="display:none" />
                            </div>
                        </div>
                    }
                }
                @if (Session["username"] != "" && Session["username"] != null && Session["userType"].ToString().CompareTo("3") == 0)
                {
                    using (Html.BeginForm("SearchFunction", "Products", FormMethod.Get, new { style = "height:40px" }))
                    {
                        <div>
                            <div style="display:flex">
                                <div>
                                    <b style="color:white"> Search Option: </b>
                                </div>
                                <div style="padding-left:10px">
                                    @Html.RadioButton("option", "PName", new { style = "margin-top:0px" }) <b style="color:white">Name</b>
                                </div>
                                <div style="padding-left:10px">
                                    @Html.RadioButton("option", "CategoryId", new { style = "margin-top:0px;" }) <b style="color:white;margin-bottom:0px">Plant Type</b>
                                </div>
                            </div>
                            <div>
                                @Html.TextBox("search", " ", new { @class = "sss", style = "border-radius: 10px; width:250px;margin-right:50px;padding-left:10px" })
                                <input type="submit" name="submit" placeholder="Search" style="display:none" />
                            </div>
                        </div>
                    }
                }
                @if (Session["username"] == "" || Session["username"] == null)
                {
                    using (Html.BeginForm("SearchFunction", "Products", FormMethod.Get, new { style = "height:40px" }))
                    {
                        <div>
                            <div style="display:flex">
                                <div>
                                    <b style="color:white"> Search Option: </b>
                                </div>
                                <div style="padding-left:10px">
                                    @Html.RadioButton("option", "PName", new { style = "margin-top:0px" }) <b style="color:white">Name</b>
                                </div>
                                <div style="padding-left:10px">
                                    @Html.RadioButton("option", "CategoryId", new { style = "margin-top:0px;" }) <b style="color:white;margin-bottom:0px">Plant Type</b>
                                </div>
                            </div>
                            <div>
                                @Html.TextBox("search", " ", new { @class = "sss", style = "border-radius: 10px; width:250px;margin-right:50px;padding-left:10px" })
                                <input type="submit" name="submit" placeholder="Search" style="display:none" />
                            </div>
                        </div>
                    }
                }



                @if (Session["username"] != "" && Session["username"] != null)
                {
                    <form class="d-flex" style="margin-right:100px">
                        <li class="nav-item dropdown" style="height:25px; margin-bottom:25px">
                            <h5 class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style=";color:white;margin-top:0px;font-size:17px">@Session["username"].ToString()</h5>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="margin-top:20px;transform:scale(1.2)">
                                <li><a style="" href="@Url.Action("Logout", "Login")">Logout</a></li>
                            </ul>
                        </li>
                        @if (Session["userType"].ToString().CompareTo("3") == 0)
                        {
                            <div style="border-left:1px solid white;height:30px;margin-top:15px"></div>
                            <h5 style="height:25px;margin-top:17px;padding-left:10px">@Html.ActionLink("Your Cart", "Index", "Cart", new { area = "" }, new { @class = "navbar-brand", style = "font-size:17px" })</h5>
                        }
                    </form>
                }
                else
                {
                    <form class="d-flex" style="margin-right:100px">
                        <li class="nav-item dropdown" style="height:25px; margin-bottom:25px">
                            <h5 class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="font-size:17px;color:white;margin-top:0px">Account</h5>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="margin-top:20px;transform:scale(1.2)">
                                <li><a style="">@Html.ActionLink("Sign In", "Index", "Login", new { area = "" }, new { @class = "dropdown-item" })</a></li>
                                <li><a style="">@Html.ActionLink("Sign Up", "Register", "Login", new { area = "" }, new { @class = "dropdown-item" })</a></li>
                            </ul>
                        </li>
                    </form>
                }
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Nhom 13 TMDT</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
