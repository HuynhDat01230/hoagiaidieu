@model ShopBanHoa.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <div  style="transform:scale(1.25);padding-left:10%;padding-top:3%">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserType.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserType.Description)
        </dd>

    </div>
</div>
@if (Model.UserTypeID == 1)
{
    <p style="padding-top:5%">

        @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-outline-secondary" })
    </p>
}
else
{
    <p style="padding-top:5%">
        <div style="display:flex">
            <div class="btn btn-outline-info">
                @Html.ActionLink("Edit", "Edit", new { id = Model.UserID, @style = "text-decoration:none" })
            </div>
            <div style="margin-left:10px;transform:scale(2);margin-top:5px">
                |
            </div>
            <div style="margin-left:10px">
                @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-outline-secondary" })
            </div>
        </div>

    </p>
}

